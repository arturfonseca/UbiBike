<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pt.ulisboa.tecnico.cmov.ubibike.HomeActivity"
    tools:showIn="@layout/activity_home"
    android:background="@drawable/back1" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status: "
        android:id="@+id/textView1"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="25sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textViewStatus"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:textSize="25sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_label"
        android:id="@+id/buttonUserMenu"
        style="@style/ButtonText"
        android:background="@drawable/btn_black"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1">
    </Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/points_label"
        android:id="@+id/buttonPointsMenu"
        style="@style/ButtonText"
        android:background="@drawable/btn_black"
        android:layout_below="@+id/buttonUserMenu"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/booking_label"
        android:id="@+id/buttonBookMenu"
        style="@style/ButtonText"
        android:background="@drawable/btn_black"
        android:layout_below="@+id/buttonPointsMenu"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/messenger_label"
        android:id="@+id/buttonMessenger"
        style="@style/ButtonText"
        android:background="@drawable/btn_black"
        android:layout_below="@+id/buttonBookMenu"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/points_now_label"
        android:id="@+id/buttonWifiPoints"
        style="@style/ButtonText"
        android:background="@drawable/btn_black"
        android:layout_below="@+id/buttonMessenger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp">
    </Button>

    <Button
        style="@style/ButtonText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Detect Pick/Drop"
        android:id="@+id/buttonDetect"
        android:background="@drawable/btn_black"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonWifiPoints"
        android:layout_alignStart="@+id/buttonWifiPoints"
        android:layout_marginBottom="45dp" />

</RelativeLayout>
